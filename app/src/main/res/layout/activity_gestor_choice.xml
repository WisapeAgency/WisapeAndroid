<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_tertiary">

    <ImageView
        android:id="@+id/img_slide"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_slide_top"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/slide_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_btn_green_normal"
            android:gravity="left"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/icon_selected_flag"
            android:text="@string/slide_motion_top" />

        <TextView
            android:id="@+id/slide_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_sixth"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:gravity="left"
            android:layout_marginBottom="15dp"
            android:text="@string/slide_motion_left"/>

    </LinearLayout>

</LinearLayout>