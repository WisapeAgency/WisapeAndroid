<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <ImageView
        android:id="@+id/img_no_active"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/head_bar_layout"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/span_space"
        android:src="@mipmap/no_message"
        android:visibility="gone"
        />


    <com.wisape.android.view.GalleryView
        android:id="@+id/gift_gallery"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/head_bar_layout"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/span_space" />


    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/icon_close_normal" />

</RelativeLayout>