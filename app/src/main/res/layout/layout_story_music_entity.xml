<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/story_music_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        style="@style/App.TextStyle.Primary"
        android:id="@+id/story_music_title_txtv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start|center_vertical"
        android:gravity="left|start|center_vertical"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="80dp"
        android:layout_gravity="right|end|center_vertical"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/story_music_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_gravity="right|end|center_vertical"
            android:src="@drawable/icon_download"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/story_music_download_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end|center_vertical"
            android:indeterminate="false"
            android:background="@color/app_primary_transparent_10p"
            android:progressDrawable="@drawable/story_music_progress_horizontal"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:max="100" />
    </FrameLayout>
</LinearLayout>