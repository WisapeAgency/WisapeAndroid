<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/linear_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_profile_icon_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:gravity="left|start|center_vertical"
            android:text="@string/user_profile_icon_title"
            android:textColor="@android:color/black" />

        <com.bugtags.library.ui.rounded.CircleImageView
            android:id="@+id/user_profile_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|left|end"
            android:src="@mipmap/icon_menu_default_head" />
    </LinearLayout>


    <!--<View-->
        <!--style="@style/Divider.ForList"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp" />-->

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_profile_name_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="left|start|center_vertical"
            android:text="@string/user_profile_name_title"
            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/user_profile_name_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:gravity="right|end|center_vertical"
            android:text="12312312"
            android:textColor="@color/app_btn_green_normal"
            android:textSize="12sp" />
    </LinearLayout>

    <!--<View-->
        <!--style="@style/Divider.ForList"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp" />-->

    <LinearLayout
        android:id="@+id/linear_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/user_profile_email_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="left|start|center_vertical"
            android:text="@string/user_profile_email_title"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/user_profile_email_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:gravity="right|end|center_vertical"
            android:textColor="@color/app_btn_green_normal"
            android:text="dfsadfsdf"/>
    </LinearLayout>


</LinearLayout>