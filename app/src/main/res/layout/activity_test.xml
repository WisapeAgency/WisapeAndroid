<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Code"
        android:id="@+id/qr_code"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Template"
        android:id="@+id/list_template"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qr_code"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Template"
        android:id="@+id/download_template"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/list_template"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Story"
        android:id="@+id/create_story"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/download_template"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/share"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_story"
        android:layout_marginTop="13dp" />
    <!--
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/qr_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"/>
    -->
</RelativeLayout>