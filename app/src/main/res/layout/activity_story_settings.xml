<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingStart="24dp"
    android:paddingRight="24dp"
    android:paddingEnd="24dp"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        style="@style/App.TextStyle.Secondary"
        android:id="@+id/story_settings_primary_title"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="left|start|center_vertical"
        android:text="@string/story_settings_primary_title" />
    <View style="@style/View.Divider"/>

    <android.support.v7.widget.AppCompatEditText
        style="@style/App.TextStyle.Primary"
        android:id="@+id/story_settings_name"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="left|start|center_vertical"
        android:hint="@string/story_settings_name_hint"
        android:background="@null"/>
    <View style="@style/View.Divider"/>

    <android.support.v7.widget.AppCompatEditText
        style="@style/App.TextStyle.Primary"
        android:id="@+id/story_settings_desc"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="left|start|center_vertical"
        android:hint="@string/story_settings_desc_hint"
        android:singleLine="false"
        android:lines="2"
        android:maxLines="2"
        android:minLines="2"
        android:background="@null"/>
    <View style="@style/View.Divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            style="@style/App.TextStyle.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start|center_vertical"
            android:gravity="left|start|center_vertical"
            android:layout_weight="1"
            android:text="@string/story_settings_cover"
            />

        <ImageView
            android:id="@+id/story_settings_cover_sdv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_menu_default_head"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_gravity="right|end|center_vertical"
            android:src="@drawable/icon_down"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        style="@style/App.TextStyle.Secondary"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="left|start|center_vertical"
        android:text="@string/story_settings_other_title"/>
    <View style="@style/View.Divider"/>
    
    <LinearLayout
        android:id="@+id/story_settings_music_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.v7.widget.AppCompatTextView
            style="@style/App.TextStyle.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start|center_vertical"
            android:gravity="left|start|center_vertical"
            android:text="@string/story_settings_music_title"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/App.TextStyle.Tertiary"
            android:id="@+id/story_settings_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end|center_vertical"
            android:gravity="right|end|center_vertical"
            android:layout_weight="1"
            android:text="@string/app_none"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_gravity="right|end|center_vertical"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
    <View style="@style/View.Divider"/>

    <LinearLayout
        android:id="@+id/story_settings_gesture_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.v7.widget.AppCompatTextView
            style="@style/App.TextStyle.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start|center_vertical"
            android:gravity="left|start|center_vertical"
            android:text="@string/story_settings_gesture_title"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/App.TextStyle.Tertiary"
            android:id="@+id/story_settings_gesture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end|center_vertical"
            android:gravity="right|end|center_vertical"
            android:layout_weight="1"
            android:text="@string/app_none"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_gravity="right|end|center_vertical"
            android:src="@drawable/icon_down"/>
    </LinearLayout>
</LinearLayout>