<resources>
    <style name="AppActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="elevation">0dp</item>
        <item name="homeAsUpIndicator">@drawable/icon_back</item>
        <item name="titleTextStyle">@style/AppActionBar.TitleStyle</item>
    </style>
    
    <style name="AppActionBar.Transparent" parent="AppActionBar">
        <item name="background">@android:color/transparent</item>
    </style>
    
    <style name="AppActionBar.TitleStyle" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textColor">@color/app_fourth</item>
    </style>

    <style name="HorizontalLine" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:background">@color/app_primary</item>
    </style>

    <style name="VerticalLine" parent="">
        <item name="android:layout_width">0.25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_primary</item>
    </style>

    <style name="App.TextStyle.Primary" parent="">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/app_sixth</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
    </style>

    <style name="App.TextStyle.Secondary" parent="App.TextStyle.Primary">
        <item name="android:textColor">@color/app_sixth_transparent_50p</item>
    </style>

    <style name="MenuListItemStyle" parent="">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_list_item_height</item>
        <item name="android:background">@drawable/menu_item_background_selector</item>
        <item name="android:textColor">@color/menu_item_text_selector</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="SignUp.Warning" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textColor">@color/app_fifth</item>
    </style>

    <style name="Divider.ForList" parent="">
        <item name="android:height">0.5dp</item>
        <item name="android:background">@drawable/divider_for_list</item>
    </style>
    
    <style name="StorySettings.Title" parent="">
        <item name="android:textColor">@color/app_primary_transparent_30p</item>
    </style>

    <style name="View.Divider" parent="">
        <item name="android:background">@color/app_sixth_transparent_50p</item>
        <item name="android:maxHeight">0.5dp</item>
        <item name="android:minHeight">0.5dp</item>
    </style>
</resources>
