<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/app_tertiary</item>
        <item name="colorPrimary">@color/app_tertiary</item>
        <item name="colorAccent">@color/app_tertiary</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/app_primary</item>

        <item name="android:textColorPrimary">@color/app_primary</item>
        <item name="android:textColor">@color/app_primary</item>
        <item name="android:textColorSecondary">@color/app_primary</item>
        <item name="android:textColorTertiary">@color/app_primary</item>

    </style>
    <style name="NoActionBarTheme" parent="DefaultTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
