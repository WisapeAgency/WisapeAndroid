<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppActionBar</item>

        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorAccent">@color/app_tertiary</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/app_primary</item>

        <item name="android:textColorPrimary">@color/app_primary</item>
        <item name="android:textColor">@color/app_primary</item>
        <item name="android:textColorSecondary">@color/app_primary</item>
        <item name="android:textColorTertiary">@color/app_primary</item>

        <item name="signUpTextCursorDrawable">@null</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>