<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wisape.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".WisapeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.LauncherActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity-->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.SignUpActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- Oauth Activity-->
        <activity
            android:name="com.oauth.android.OAuthActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity android:name=".activity.PhotoSelectorActivity"
            android:label="@string/photo_bucket_all"
            android:screenOrientation="portrait"
            android:launchMode="singleTop" />

        <activity android:name=".activity.PasswordResetActivity"
            android:label="@string/password_reset_label"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity android:name=".activity.StoryTemplateActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            />

        <activity android:name=".activity.UserProfileActivity"
            android:label="@string/user_profile_label"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity android:name=".activity.AboutActivity"
            android:label="@string/about_label"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity android:name=".activity.ScaleCropImageActivity"
            android:theme="@style/AppTheme.Transparent"
            android:label="@string/crop_activity_label"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity android:name=".activity.StorySettingsActivity"
            android:label="@string/story_settings_label"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity android:name=".activity.StoryMusicActivity"
            android:label="@string/story_music_label"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            />

        <activity android:name=".activity.TestActivity"
            android:label="Test"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <service android:name=".service.NanoService"
            android:exported="false"/>

        <provider
            android:authorities="com.wisape.photo"
            android:name="com.wisape.android.content.PhotoProvider"
            android:syncable="false"
            android:exported="false"
            android:enabled="true"/>
    </application>

</manifest>
