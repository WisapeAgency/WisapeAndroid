<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item android:top="50dp">
                <shape>
                    <solid android:color="@color/app_btn_green_normal"/>
                    <size android:width="10000dp" android:height="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false" android:state_selected="false">
        <layer-list>
            <item android:top="50dp">
                <shape>
                    <solid android:color="@color/app_edit_normal"/>
                    <size android:width="10000dp" android:height="0.5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>